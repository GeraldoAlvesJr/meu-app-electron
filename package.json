{
  "name": "meu-app-electron",
  "version": "1.0.7",
  "description": "Uma aplicação Electron simples",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "git tag v$(node -p \"require('./package.json').version\") && git push origin v$(node -p \"require('./package.json').version\") && electron-builder --publish always"
  },
  "devDependencies": {
    "electron": "^X.X.X",
    "electron-builder": "^X.X.X"
  },
  "build": {
    "appId": "com.exemplo.meuapp",
    "productName": "MeuApp",
    "publish": {
      "provider": "github",
      "owner": "GeraldoAlvesJr",
      "repo": "meu-app-electron",
      "releaseType": "release"
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  }
}
